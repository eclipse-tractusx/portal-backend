<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Org.Eclipse.TractusX.Portal.Backend.Mailing.Template</AssemblyName>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="7.0.0" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
      <PackageReference Include="Org.Eclipse.TractusX.Portal.Backend.Framework.Models" Version="1.0.0-beta.6" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="EmailTemplates" />
    <Content Include="EmailTemplates\**" LinkBase="EmailTemplates" CopyToOutputDirectory="Always" />
  </ItemGroup>

<ItemGroup>
     <SonarQubeSetting Include="sonar.exclusions">
          <Value>EmailTemplates/**/*</Value>
     </SonarQubeSetting>
</ItemGroup>

</Project>
