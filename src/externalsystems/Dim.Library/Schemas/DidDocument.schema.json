{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eclipse-tractusx.github.io/DidDocument.schema.json",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "const": [
        "https://www.w3.org/ns/did/v1",
        "https://w3id.org/security/suites/ed25519-2020/v1"
      ]
    },
    "id": {
      "type": "string"
    },
    "verificationMethod": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "type": {
            "type": "string"
          },
          "publicKeyJwk": {
            "type": "object",
            "properties": {
              "kty": {
                "type": "string"
              },
              "crv": {
                "type": "string"
              },
              "x": {
                "type": "string"
              }
            },
            "required": [
              "kty",
              "crv",
              "x"
            ],
            "additionalProperties": true
          }
        },
        "required": [
          "id",
          "type",
          "publicKeyJwk"
        ],
        "additionalProperties": true
      }
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "type": {
            "type": "string"
          },
          "serviceEndpoint": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["id", "@context", "verificationMethod", "services"],
  "additionalProperties": true
}
